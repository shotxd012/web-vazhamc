<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <style>
        .announcement-card {
            transition: all 0.3s ease;
            backdrop-filter: blur(12px);
        }
        .announcement-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(15, 190, 29, 0.2);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white min-h-screen font-sans">
    <%- include('partials/nav') %>

    <main class="container mx-auto px-4 py-16">
        <!-- Header Section -->
        <div class="container mx-auto px-4 py-10 flex flex-col items-center gap-12">
            <h1 class="text-5xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-teal-400 via-emerald-500 to-green-600">
                Announcements
            </h1>
            <p class="text-xl text-gray-300 text-center max-w-2xl">
                Stay updated with the latest news and important information from our team.
            </p>
        </div>
        
        <div class="space-y-6 max-w-4xl mx-auto">
            <% if (announcements.length > 0) { %>
                <% announcements.forEach(announcement => { %>
                    <div class="announcement-card bg-gray-800 bg-opacity-50 p-6 rounded-xl border border-gray-700 shadow-lg">
                        <div class="flex items-start gap-4">
                            <div class="bg-emerald-500 bg-opacity-20 p-3 rounded-lg">
                                <i class="ph ph-megaphone text-2xl text-emerald-400"></i>
                            </div>
                            <div class="flex-1">
                                <h2 class="text-2xl font-bold text-emerald-400"><%= announcement.title %></h2>
                                <p class="mt-2 text-gray-300"><%= announcement.description %></p>
                                <div class="mt-4 flex items-center gap-4 text-sm text-gray-500">
                                    <div class="flex items-center gap-1">
                                        <i class="ph ph-clock"></i>
                                        <span><%= new Date(announcement.timestamp).toLocaleString() %></span>
                                    </div>
                                    <div class="flex items-center gap-1">
                                        <i class="ph ph-info"></i>
                                        <span><%= announcement.footer %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="text-center py-12">
                    <div class="bg-gray-800 bg-opacity-50 p-8 rounded-xl border border-gray-700">
                        <i class="ph ph-bell text-4xl text-gray-500 mb-4"></i>
                        <p class="text-gray-400">No announcements yet.</p>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
