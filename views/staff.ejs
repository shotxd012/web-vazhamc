<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <style>
        .staff-card {
            background: rgba(31, 41, 55, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }
        .staff-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 255, 135, 0.15);
            border-color: rgba(76, 175, 80, 0.5);
        }
        .staff-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.2), transparent);
            transition: left 0.5s ease;
        }
        .staff-card:hover::before {
            left: 100%;
        }
        .profile-section {
            backdrop-filter: blur(12px);
        }
    </style>
</head>
<%- include('partials/message') %>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white min-h-screen font-sans">
    <%- include('partials/nav') %>
    
    <main class="container mx-auto px-4 py-16">
        <!-- Header Section -->
        <div class="container mx-auto px-4 py-10 flex flex-col items-center gap-12">
            <h1 class="text-5xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-teal-400 via-emerald-500 to-green-600">
                Meet Our Staff
            </h1>
            <p class="text-xl text-gray-300 text-center max-w-2xl">
                Our dedicated team ensures the best experience for players.
            </p>
        </div>

        <!-- Staff Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% staffs.forEach(staff => { %>
                <div class="staff-card bg-gray-800 bg-opacity-50 p-6 rounded-xl border border-gray-700 shadow-lg">
                    <div class="flex flex-col items-center">
                        <!-- Avatar with Status -->
                        <div class="relative mb-4">
                            <img src="<%= staff.avatar %>" alt="<%= staff.name %>" 
                                class="w-24 h-24 rounded-full border-4 border-emerald-500 shadow-xl object-cover">
                            <div class="absolute bottom-2 right-2 w-4 h-4 rounded-full border-2 border-gray-900 shadow-lg"
                                 style="background-color: <%= staff.status === 'online' ? '#34D399' : staff.status === 'idle' ? '#FACC15' : staff.status === 'dnd' ? '#EF4444' : '#6B7280' %>;">
                            </div>
                        </div>

                        <!-- Staff Info -->
                        <h3 class="text-xl font-bold mb-2"><%= staff.name %></h3>
                        <p class="text-emerald-400 font-medium mb-2"><%= staff.position %></p>
                        
                        <!-- Roles -->
                        <div class="flex flex-wrap gap-2 justify-center mb-4">
                            <% staff.roles.forEach(role => { %>
                                <span class="px-3 py-1 rounded-full text-sm bg-gray-700 bg-opacity-50 text-gray-300">
                                    <%= role %>
                                </span>
                            <% }); %>
                        </div>

                        <!-- Status Badge -->
                        <div class="flex items-center gap-2 bg-gray-700 bg-opacity-50 px-4 py-2 rounded-lg">
                            <i class="ph ph-circle-fill text-sm"
                               style="color: <%= staff.status === 'online' ? '#34D399' : staff.status === 'idle' ? '#FACC15' : staff.status === 'dnd' ? '#EF4444' : '#6B7280' %>;">
                            </i>
                            <span class="text-sm font-medium">
                                <%= staff.status.charAt(0).toUpperCase() + staff.status.slice(1) %>
                            </span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    

    <%- include('partials/footer') %>
</body>
</html>