<%- include('../partials/head') %>
<%- include('../partials/message') %>

<body class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <%- include('../partials/nav') %>

    <main class="container mx-auto px-4 pt-24 pb-16">
        <!-- Admin Source Code Management Header -->
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 mb-8 border border-gray-700/50 shadow-xl mt-16">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-white mb-2">Source Code Management</h1>
                    <p class="text-gray-400">Manage source code uploads</p>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="px-4 py-2 bg-red-500/10 text-red-400 rounded-full text-sm font-medium">
                        <i class="ph ph-shield-check mr-2"></i>Staff Member
                    </span>
                </div>
            </div>
        </div>

        <!-- Add Source Code Form -->
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-700/50 mb-8">
            <h3 class="text-lg font-semibold text-white mb-4">Add New Source Code</h3>
            <form action="/admin/source-code" method="POST" onsubmit="showLoading(event)">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-400 mb-2">Title</label>
                        <input type="text" name="title" id="title" class="w-full bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-2 text-white placeholder-gray-400 focus:outline-none focus:border-red-500" required>
                    </div>
                    <div>
                        <label for="githubLink" class="block text-sm font-medium text-gray-400 mb-2">GitHub Link</label>
                        <input type="text" name="githubLink" id="githubLink" class="w-full bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-2 text-white placeholder-gray-400 focus:outline-none focus:border-red-500" required>
                    </div>
                    <div class="md:col-span-2">
                        <label for="youtubeThumbnail" class="block text-sm font-medium text-gray-400 mb-2">YouTube Thumbnail URL</label>
                        <input type="text" name="youtubeThumbnail" id="youtubeThumbnail" class="w-full bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-2 text-white placeholder-gray-400 focus:outline-none focus:border-red-500" required>
                    </div>
                    <div class="md:col-span-2">
                        <label for="description" class="block text-sm font-medium text-gray-400 mb-2">Description</label>
                        <textarea name="description" id="description" rows="4" class="w-full bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-2 text-white placeholder-gray-400 focus:outline-none focus:border-red-500"></textarea>
                    </div>
                    <div>
                        <label for="price" class="block text-sm font-medium text-gray-400 mb-2">Price</label>
                        <input type="number" name="price" id="price" class="w-full bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-2 text-white placeholder-gray-400 focus:outline-none focus:border-red-500" value="0">
                    </div>
                    <div>
                        <label for="isPaid" class="block text-sm font-medium text-gray-400 mb-2">Paid</label>
                        <input type="checkbox" name="isPaid" id="isPaid" class="w-6 h-6 bg-gray-700/50 border border-gray-600 rounded-lg focus:outline-none focus:border-red-500">
                    </div>
                </div>
                <div class="mt-6">
                    <button type="submit" class="submit-btn px-6 py-2 bg-red-600 hover:bg-red-700 rounded-lg font-medium transition-colors flex items-center gap-2">
                        <i class="ph ph-plus submit-icon"></i>
                        <svg class="submit-spinner hidden h-5 w-5 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span class="submit-text">Add Source Code</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- Source Code List -->
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-700/50">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-white">Recent Source Codes</h3>
                <div class="relative w-64">
                    <input type="text" 
                           id="searchInput" 
                           placeholder="Search by ID, title..." 
                           class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent text-sm">
                    <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div id="sourceCodeGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% sourceCodes.forEach(item => { %>
                    <div class="bg-gray-700/30 rounded-xl p-4" 
                         data-id="<%= item.sourceCodeId || item._id %>" 
                         data-title="<%= item.title.toLowerCase() %>" 
                         data-description="<%= (item.description || '').toLowerCase() %>">
                        <img src="<%= item.youtubeThumbnail %>" alt="Youtube Thumbnail" class="w-full h-48 object-cover rounded-lg mb-4">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center space-x-2">
                                <img src="https://cdn.discordapp.com/avatars/<%= item.discordId %>/<%= item.avatar %>.png" 
                                     alt="<%= item.username %>" 
                                     class="w-6 h-6 rounded-full">
                                <span class="text-white font-medium"><%= item.username %></span>
                            </div>
                            <span class="text-gray-400 text-sm"><%= new Date(item.timestamp).toLocaleDateString() %></span>
                        </div>
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="text-lg font-semibold text-white"><%= item.title %></h4>
                            <span class="text-xs font-mono text-gray-500 bg-gray-800 px-2 py-1 rounded">#<%= item.sourceCodeId || item._id.toString().slice(-6) %></span>
                        </div>
                        <p class="text-gray-400 text-sm mb-4"><%= item.description || 'No description' %></p>
                        <div class="flex items-center justify-between">
                            <a href="<%= item.githubLink %>" target="_blank" class="px-3 py-1 bg-blue-500/10 text-blue-400 rounded-lg hover:bg-blue-500/20 transition-colors">
                                <i class="ph ph-github-logo mr-1"></i>GitHub
                            </a>
                            <form action="/admin/source-code/<%= item._id %>/delete" method="POST" onsubmit="if (!confirm('Are you sure you want to delete this source code?')) return false; showLoading(event);">
                                <button type="submit" class="submit-btn px-3 py-1 bg-red-500/10 text-red-400 rounded-lg hover:bg-red-500/20 transition-colors flex items-center gap-1">
                                    <i class="ph ph-trash submit-icon"></i>
                                    <svg class="submit-spinner hidden h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <span class="submit-text">Delete</span>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <script>
        // Loading animation for forms
        function showLoading(e) {
            const btn = e.target.querySelector('.submit-btn');
            if (btn) {
                btn.disabled = true;
                const icon = btn.querySelector('.submit-icon');
                const spinner = btn.querySelector('.submit-spinner');
                const text = btn.querySelector('.submit-text');
                if (icon) icon.classList.add('hidden');
                if (spinner) spinner.classList.remove('hidden');
                if (text) {
                    const originalText = text.textContent;
                    if (originalText.includes('Delete')) text.textContent = 'Deleting...';
                    else if (originalText.includes('Add')) text.textContent = 'Adding...';
                }
            }
        }

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const sourceCodeGrid = document.getElementById('sourceCodeGrid');
        const cards = sourceCodeGrid.querySelectorAll('.bg-gray-700\/30');

        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            let visibleCount = 0;

            cards.forEach(card => {
                const id = card.getAttribute('data-id').toLowerCase();
                const title = card.getAttribute('data-title');
                const description = card.getAttribute('data-description');

                if (id.includes(searchTerm) || title.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Show "no results" message if needed
            let noResultsMsg = document.getElementById('noResultsMsg');
            if (visibleCount === 0 && searchTerm !== '') {
                if (!noResultsMsg) {
                    noResultsMsg = document.createElement('div');
                    noResultsMsg.id = 'noResultsMsg';
                    noResultsMsg.className = 'col-span-full text-center py-12';
                    noResultsMsg.innerHTML = `
                        <div class="text-gray-400">
                            <svg class="w-16 h-16 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <p class="text-xl font-semibold">No source codes found</p>
                            <p class="text-sm mt-2">Try searching with different keywords</p>
                        </div>
                    `;
                    sourceCodeGrid.appendChild(noResultsMsg);
                }
            } else if (noResultsMsg) {
                noResultsMsg.remove();
            }
        });
    </script>
</body>