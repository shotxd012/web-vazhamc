<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shot Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        dark: {
                            '100': '#444444',
                            '200': '#3a3a3a',
                            '300': '#333333',
                            '400': '#2c2c2c',
                            '500': '#1e1e1e',
                        },
                        proxblue: '#42a5f5',
                        proxorange: '#ff6d00',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-dark-500 text-gray-200 h-screen flex flex-col">
    <!-- Header -->
    <header class="flex items-center justify-between px-4 py-2 bg-dark-400 border-b border-dark-100">
        <div class="flex items-center">
            <span class="text-proxorange font-bold text-xl">SH</span>
            <span class="text-proxblue font-bold text-xl">OT</span>
            <span class="text-proxorange font-bold text-xl">XD</span>
            <span class="ml-2 text-gray-400 text-sm">Main Database</span>
        </div>
    </header>

    <!-- Main Content -->
    <div class="flex flex-1">
        <!-- Sidebar -->
        <div class="w-64 bg-dark-400 border-r border-dark-100">
            <div class="p-2 border-b border-dark-100 flex items-center justify-between">
                <span class="text-sm">Server View</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 hover:text-gray-200">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                </svg>
            </div>
            <div class="p-2">
                <div class="flex items-center text-sm py-1 px-2 hover:bg-dark-200 rounded cursor-pointer">
                    <svg class="mr-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
                        <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
                        <line x1="6" y1="6" x2="6.01" y2="6"></line>
                        <line x1="6" y1="18" x2="6.01" y2="18"></line>
                    </svg>
                    <span>Datacenter</span>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="flex-1 flex items-center justify-center">
            <div class="w-[400px] bg-dark-400 border border-dark-100 rounded shadow-lg">
                <div class="p-4 border-b border-dark-100">
                    <h2 class="text-proxblue text-lg">Shot XD Datacenter Login</h2>
                </div>
                <div class="p-4">
                    <% if (error) { %>
                        <div class="text-red-500 text-sm mb-3 text-center"><%= error %></div>
                    <% } %>
                    <form action="/shot/login" method="POST">
                        <div class="mb-4">
                            <div class="flex items-center mb-1">
                                <label class="w-28 text-right mr-2 text-sm">User name:</label>
                                <input type="text" name="username" class="flex-1 h-8 bg-dark-300 border border-dark-100 rounded px-2 text-gray-200 focus:border-proxblue focus:outline-none" required>
                            </div>
                            <div class="flex items-center mb-1">
                                <label class="w-28 text-right mr-2 text-sm">Password:</label>
                                <input type="password" name="password" class="flex-1 h-8 bg-dark-300 border border-dark-100 rounded px-2 text-gray-200 focus:border-proxblue focus:outline-none" required>
                            </div>
                        </div>
                        <div class="flex justify-between items-center">
                            <button type="submit" class="bg-proxblue hover:bg-blue-700 text-white px-4 py-1 text-sm rounded">
                                Login
                            </button>
                        </div>
                    </form>                    
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="p-2 bg-dark-400 border-t border-dark-100 flex justify-between">
        <span class="text-proxblue text-sm">Logs</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 hover:text-gray-200">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
    </div>
</body>
</html>