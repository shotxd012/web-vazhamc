<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/shot/head') %>
</head>

<body class="bg-dark-500 text-gray-200 h-screen flex flex-col">
  <div class="flex flex-1">
    <%- include('partials/shot/sidebar') %>

    <div class="flex-1 p-6">
      <h2 class="text-lg font-medium text-gray-200 mb-6">ðŸŽ« Ticket: <%= ticket.ticketId %></h2>

      <div class="bg-dark-600 border border-dark-200 rounded-lg p-6 space-y-6">

        <!-- Ticket Info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-300">
          <div>
            <p><strong>Title:</strong> <%= ticket.title %></p>
            <p><strong>Reason:</strong> <%= ticket.reason %></p>
            <p><strong>Description:</strong> <%= ticket.description %></p>
            <p><strong>Type:</strong> <%= ticket.type %></p>
          </div>
          <div>
            <p><strong>User:</strong> <%= ticket.username %></p>
            <p><strong>User ID:</strong> <%= ticket.userId %></p>
            <p><strong>Status:</strong>
              <span class="<%= ticket.status === 'closed' ? 'text-red-500' : 'text-green-400' %>">
                <%= ticket.status %>
              </span>
            </p>
            <% if (ticket.closedReason) { %>
              <p class="text-red-400 italic mt-1">Reason: <%= ticket.closedReason %></p>
            <% } %>
          </div>
        </div>

        <!-- Message Area -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Chat History -->
          <div class="md:col-span-2 bg-dark-700 p-4 rounded-lg h-[32rem] overflow-y-auto space-y-4 border border-dark-200">
            <% messages.forEach(msg => { %>
              <div class="flex <%= msg.userId === ticket.userId ? 'justify-start' : 'justify-end' %>">
                <div class="bg-dark-500 p-3 rounded-lg shadow max-w-sm w-full">
                  <div class="flex items-center space-x-2 mb-1">
                    <img src="https://cdn.discordapp.com/avatars/<%= msg.userId %>/<%= msg.avatar %>.png" class="w-6 h-6 rounded-full">
                    <span class="text-emerald-400 font-semibold text-sm"><%= msg.username %></span>
                  </div>
                  <% if (msg.message) { %>
                    <p class="text-sm text-gray-200"><%= msg.message %></p>
                  <% } %>
                  <% if (msg.image) { %>
                    <img src="<%= msg.image %>" class="mt-2 rounded border border-dark-500 max-h-48">
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>

          <!-- Admin Reply -->
          <% if (ticket.status !== "closed") { %>
            <form action="/shot/ticket/<%= ticket.ticketId %>/reply" method="POST" enctype="multipart/form-data" class="bg-dark-700 p-4 rounded-lg border border-dark-200 space-y-3 h-fit">
              <h2 class="text-lg font-bold text-emerald-400 mb-2">ðŸ’¬ Reply to Ticket</h2>
              <textarea name="message" placeholder="Write your message..." class="w-full p-2 bg-dark-600 rounded resize-none text-sm text-white"></textarea>
              <input type="file" name="image" accept="image/*" class="text-sm text-gray-300">
              <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 w-full py-2 rounded text-sm font-semibold">
                ðŸ“¤ Send Reply
              </button>
            </form>
          <% } else { %>
            <p class="text-center text-sm text-gray-400 italic">This ticket is closed. You cannot send replies.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/shot/footer') %>
</body>
</html>
