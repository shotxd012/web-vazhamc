<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white font-sans min-h-screen">
    <%- include('partials/nav') %>
    <%- include('partials/message') %>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-16">
        <div class="container mx-auto px-4 py-10 flex flex-col items-center gap-6">
            <h1 class="text-5xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-red-400 via-red-500 to-red-600 mb-4">
                Source Codes
            </h1>
            <p class="text-gray-400 max-w-2xl mx-auto text-center">
                Explore and download source codes for your projects.
            </p>
            
            <!-- Search Bar -->
            <div class="w-full max-w-2xl mt-4">
                <div class="relative">
                    <input type="text" 
                           id="searchInput" 
                           placeholder="Search by ID, title, or description..." 
                           class="w-full px-6 py-4 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all">
                    <svg class="absolute right-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div id="sourceCodeGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% sourceCodes.forEach(item => { %>
                <div class="media-card bg-gray-800 bg-opacity-50 backdrop-blur-xl rounded-2xl overflow-hidden border border-gray-700 shadow-xl" 
                     data-id="<%= item.sourceCodeId || item._id %>" 
                     data-title="<%= item.title.toLowerCase() %>" 
                     data-description="<%= (item.description || '').toLowerCase() %>">
                    <!-- Media Header -->
                    <div class="relative">
                        <img src="<%= item.youtubeThumbnail %>" alt="Youtube Thumbnail" class="w-full h-72 object-cover">
                        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent"></div>
                        
                        <!-- User Info -->
                        <div class="absolute bottom-4 left-4 flex items-center space-x-3">
                            <img src="https://cdn.discordapp.com/avatars/<%= item.discordId %>/<%= item.avatar %>.png" 
                                 class="w-10 h-10 rounded-full border-2 border-red-500 shadow-lg"
                                 alt="<%= item.username %>">
                            <span class="font-medium text-white shadow-text"><%= item.username %></span>
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-2">
                            <h2 class="text-2xl font-bold"><%= item.title %></h2>
                            <span class="text-xs font-mono text-gray-500 bg-gray-700 px-2 py-1 rounded">#<%= item.sourceCodeId || item._id.toString().slice(-6) %></span>
                        </div>
                        <% if (item.description) { %>
                            <p class="text-gray-300 mb-4"><%= item.description %></p>
                        <% } %>

                        <!-- Interaction Buttons -->
                        <div class="flex items-center justify-between">
                            <% if (item.isPaid) { %>
                                <a href="/source-code/<%= item._id %>/purchase" class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                    Purchase ($<%= item.price %>)
                                </a>
                            <% } else { %>
                                <a href="<%= item.githubLink %>" target="_blank" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                    View on GitHub
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('partials/footer') %>
    
    <script>
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const sourceCodeGrid = document.getElementById('sourceCodeGrid');
        const cards = sourceCodeGrid.querySelectorAll('.media-card');

        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            let visibleCount = 0;

            cards.forEach(card => {
                const id = card.getAttribute('data-id').toLowerCase();
                const title = card.getAttribute('data-title');
                const description = card.getAttribute('data-description');

                if (id.includes(searchTerm) || title.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Show "no results" message if needed
            let noResultsMsg = document.getElementById('noResultsMsg');
            if (visibleCount === 0 && searchTerm !== '') {
                if (!noResultsMsg) {
                    noResultsMsg = document.createElement('div');
                    noResultsMsg.id = 'noResultsMsg';
                    noResultsMsg.className = 'col-span-full text-center py-12';
                    noResultsMsg.innerHTML = `
                        <div class="text-gray-400">
                            <svg class="w-16 h-16 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <p class="text-xl font-semibold">No source codes found</p>
                            <p class="text-sm mt-2">Try searching with different keywords</p>
                        </div>
                    `;
                    sourceCodeGrid.appendChild(noResultsMsg);
                }
            } else if (noResultsMsg) {
                noResultsMsg.remove();
            }
        });
    </script>
</body>
</html>