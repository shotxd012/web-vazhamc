<div class="flex-1 p-6">
    <div class="mb-6">
        <h1 class="text-2xl font-semibold mb-2">Welcome, <%= user.username %></h1>
        <p class="text-gray-400">Dashboard overview</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Summary Card -->
        <div class="bg-dark-400 border border-dark-100 rounded-lg p-4">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-medium">System Summary</h2>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-proxblue">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
            </div>
            <div class="space-y-3">
                <div class="flex justify-between">
                    <span class="text-gray-400">CPU Usage</span>
                    <span>15%</span>
                </div>
                <div class="w-full bg-dark-300 rounded-full h-2">
                    <div class="bg-proxblue h-2 rounded-full" style="width: 15%"></div>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-400">Memory Usage</span>
                    <span>42%</span>
                </div>
                <div class="w-full bg-dark-300 rounded-full h-2">
                    <div class="bg-proxblue h-2 rounded-full" style="width: 42%"></div>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-400">Storage Usage</span>
                    <span>28%</span>
                </div>
                <div class="w-full bg-dark-300 rounded-full h-2">
                    <div class="bg-proxblue h-2 rounded-full" style="width: 28%"></div>
                </div>
            </div>
        </div>

        <!-- Virtual Machines Card -->
        <div class="bg-dark-400 border border-dark-100 rounded-lg p-4">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-medium">Virtual Machines</h2>
                <button class="text-xs bg-proxblue hover:bg-blue-700 text-white px-2 py-1 rounded">
                    Create VM
                </button>
            </div>
            <div class="space-y-2">
                <div class="flex justify-between items-center p-2 bg-dark-300 rounded">
                    <div class="flex items-center">
                        <div class="h-3 w-3 rounded-full bg-green-500 mr-2"></div>
                        <span>vm-101</span>
                    </div>
                    <div class="text-xs text-gray-400">Running</div>
                </div>
                <div class="flex justify-between items-center p-2 bg-dark-300 rounded">
                    <div class="flex items-center">
                        <div class="h-3 w-3 rounded-full bg-red-500 mr-2"></div>
                        <span>vm-102</span>
                    </div>
                    <div class="text-xs text-gray-400">Stopped</div>
                </div>
                <div class="flex justify-between items-center p-2 bg-dark-300 rounded">
                    <div class="flex items-center">
                        <div class="h-3 w-3 rounded-full bg-green-500 mr-2"></div>
                        <span>vm-103</span>
                    </div>
                    <div class="text-xs text-gray-400">Running</div>
                </div>
            </div>
        </div>

        <!-- Storage Card -->
        <div class="bg-dark-400 border border-dark-100 rounded-lg p-4">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-medium">Storage</h2>
                <button class="text-xs bg-proxblue hover:bg-blue-700 text-white px-2 py-1 rounded">
                    Add Storage
                </button>
            </div>
            <div class="space-y-2">
                <div class="flex justify-between items-center p-2 bg-dark-300 rounded">
                    <span>local</span>
                    <div class="text-xs text-gray-400">120 GB / 500 GB</div>
                </div>
                <div class="flex justify-between items-center p-2 bg-dark-300 rounded">
                    <span>backup</span>
                    <div class="text-xs text-gray-400">250 GB / 1 TB</div>
                </div>
                <div class="flex justify-between items-center p-2 bg-dark-300 rounded">
                    <span>shared</span>
                    <div class="text-xs text-gray-400">450 GB / 2 TB</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Table -->
    <div class="mt-6 bg-dark-400 border border-dark-100 rounded-lg p-4">
        <h2 class="text-lg font-medium mb-4">Recent Activity</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead>
                    <tr class="border-b border-dark-100">
                        <th class="py-2 px-4 text-left text-sm font-medium text-gray-400">Time</th>
                        <th class="py-2 px-4 text-left text-sm font-medium text-gray-400">User</th>
                        <th class="py-2 px-4 text-left text-sm font-medium text-gray-400">Action</th>
                        <th class="py-2 px-4 text-left text-sm font-medium text-gray-400">Status</th>
                    </tr>
                </thead>
                <tbody id="activity-table">
                    <% recentActivities.forEach(activity => { %>
                        <tr class="border-b border-dark-100">
                            <td class="py-2 px-4 text-sm"><%= new Date(activity.timestamp).toLocaleString() %></td>
                            <td class="py-2 px-4 text-sm"><%= activity.username %></td>
                            <td class="py-2 px-4 text-sm"><%= activity.action %></td>
                            <td class="py-2 px-4 text-sm text-green-500">Success</td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>