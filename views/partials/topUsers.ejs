<div class="container mx-auto px-4 py-8 sm:py-12">
    <div class="relative mb-8 sm:mb-16">
        <div class="absolute inset-0 bg-emerald-500 opacity-10 blur-3xl"></div>
        <div class="relative z-10 p-4 sm:p-8 rounded-2xl bg-gray-800 bg-opacity-50 border border-gray-700 shadow-xl backdrop-blur-sm">
            <!-- Header Section -->
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6 sm:mb-8">
                <h2 class="text-xl sm:text-2xl font-bold text-emerald-400 flex items-center gap-2">
                    <i class="ph ph-trophy text-2xl"></i>
                    Top Users
                </h2>
                <a href="/media" class="bg-emerald-600 hover:bg-emerald-700 px-4 sm:px-6 py-2 rounded-lg transition-all duration-300 flex items-center justify-center gap-2 hover:shadow-lg hover:shadow-emerald-500/20 w-full sm:w-auto">
                    <i class="ph ph-images"></i>
                    <span class="text-white font-medium">View Media</span>
                </a>
            </div>

            <!-- Users List -->
            <div class="space-y-3 sm:space-y-4">
                <% (Array.isArray(topUsers) ? topUsers : []).forEach((user, index) => { %>
                    <div class="bg-gray-800 bg-opacity-50 p-3 sm:p-4 rounded-xl border border-gray-700 shadow-lg hover:transform hover:translate-x-2 transition-all duration-300 hover:shadow-emerald-500/10 hover:border-emerald-500/50 group">
                        <div class="flex items-center gap-3 sm:gap-4">
                            <!-- Rank Badge -->
                            <div class="bg-emerald-600 text-white w-7 h-7 sm:w-8 sm:h-8 rounded-full flex items-center justify-center font-bold flex-shrink-0 shadow-lg shadow-emerald-500/20 group-hover:scale-110 transition-transform">
                                <%= index + 1 %>
                            </div>

                            <!-- User Avatar -->
                            <img 
                                src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.png" 
                                alt="<%= user.username %>'s avatar" 
                                class="w-10 h-10 sm:w-12 sm:h-12 rounded-full border-2 border-emerald-500 object-cover flex-shrink-0 shadow-lg shadow-emerald-500/20 group-hover:border-emerald-400 transition-colors"
                            >

                            <!-- User Info -->
                            <div class="flex-1 min-w-0">
                                <h3 class="text-base sm:text-lg font-semibold text-white truncate"><%= user.username %></h3>
                                <div class="flex items-center gap-3 sm:gap-4 mt-1 flex-wrap">
                                    <!-- Media Count -->
                                    <div class="flex items-center gap-1 text-emerald-400 hover:text-emerald-300 transition-colors text-sm">
                                        <i class="ph ph-images"></i>
                                        <span><%= user.mediaCount %></span>
                                    </div>
                                    <!-- Likes Count -->
                                    <div class="flex items-center gap-1 text-yellow-400 hover:text-yellow-300 transition-colors text-sm">
                                        <i class="ph ph-heart"></i>
                                        <span><%= user.totalLikes %></span>
                                    </div>
                                    <!-- Comments Count -->
                                    <div class="flex items-center gap-1 text-blue-400 hover:text-blue-300 transition-colors text-sm">
                                        <i class="ph ph-chat-circle"></i>
                                        <span><%= user.commentCount %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/@phosphor-icons/web"></script>

<style>
  @media (max-width: 640px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    
    .user-item {
      padding: 0.75rem;
    }
    
    .rank-badge {
      width: 1.75rem;
      height: 1.75rem;
      font-size: 0.875rem;
    }
    
    .user-avatar {
      width: 2.5rem;
      height: 2.5rem;
    }
    
    .user-stats {
      gap: 0.75rem;
    }
    
    .stat {
      font-size: 0.75rem;
    }
  }

  /* Add smooth scrolling for the entire page */
  html {
    scroll-behavior: smooth;
  }

  /* Enhance touch interactions */
  @media (hover: none) {
    .user-item:active {
      transform: scale(0.98);
    }
    
    .media-button:active {
      transform: scale(0.95);
    }
  }

  /* Add loading animation for images */
  .user-avatar {
    transition: opacity 0.3s ease;
  }

  .user-avatar:not([src]), .user-avatar[src=""] {
    opacity: 0;
  }

  /* Add subtle hover effect for stats */
  .stat {
    position: relative;
    overflow: hidden;
  }

  .stat::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  .stat:hover::after {
    width: 100%;
  }

  /* Add pulse animation for top 3 users */
  .rank-badge:nth-child(-n+3) {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
    }
  }
</style>

