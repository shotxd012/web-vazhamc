<div class="container mx-auto px-4 py-12">
    <div class="relative mb-16">
        <div class="absolute inset-0 bg-emerald-500 opacity-10 blur-3xl"></div>
        <div class="relative z-10 p-8 rounded-2xl bg-gray-800 bg-opacity-50 border border-gray-700 shadow-xl backdrop-blur-sm">
            <!-- Header Section -->
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold text-emerald-400 flex items-center gap-2">
                    <i class="ph ph-trophy"></i>
                    Top Users
                </h2>
                <a href="/media" class="bg-emerald-600 hover:bg-emerald-700 px-6 py-2 rounded-lg transition-all duration-300 flex items-center gap-2 hover:shadow-lg hover:shadow-emerald-500/20">
                    <i class="ph ph-images"></i>
                    <span class="text-white font-medium">View Media</span>
                </a>
            </div>

            <!-- Users List -->
            <div class="space-y-4">
                <% topUsers.forEach((user, index) => { %>
                    <div class="bg-gray-800 bg-opacity-50 p-4 rounded-xl border border-gray-700 shadow-lg hover:transform hover:translate-x-2 transition-all duration-300 hover:shadow-emerald-500/10 hover:border-emerald-500/50">
                        <div class="flex items-center gap-4">
                            <!-- Rank Badge -->
                            <div class="bg-emerald-600 text-white w-8 h-8 rounded-full flex items-center justify-center font-bold flex-shrink-0 shadow-lg shadow-emerald-500/20">
                                <%= index + 1 %>
                            </div>

                            <!-- User Avatar -->
                            <img 
                                src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.png" 
                                alt="<%= user.username %>'s avatar" 
                                class="w-12 h-12 rounded-full border-2 border-emerald-500 object-cover flex-shrink-0 shadow-lg shadow-emerald-500/20"
                            >

                            <!-- User Info -->
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-white"><%= user.username %></h3>
                                <div class="flex items-center gap-4 mt-1">
                                    <!-- Media Count -->
                                    <div class="flex items-center gap-1 text-emerald-400 hover:text-emerald-300 transition-colors">
                                        <i class="ph ph-images"></i>
                                        <span><%= user.mediaCount %></span>
                                    </div>
                                    <!-- Likes Count -->
                                    <div class="flex items-center gap-1 text-yellow-400 hover:text-yellow-300 transition-colors">
                                        <i class="ph ph-heart"></i>
                                        <span><%= user.totalLikes %></span>
                                    </div>
                                    <!-- Comments Count -->
                                    <div class="flex items-center gap-1 text-blue-400 hover:text-blue-300 transition-colors">
                                        <i class="ph ph-chat-circle"></i>
                                        <span><%= user.commentCount %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/@phosphor-icons/web"></script>

<style>
  .top-users-container {
    background-color: #0f172a;
    border: 1px solid #1f2937;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    max-width: 600px;
    margin: 0 auto;
  }

  .top-users-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #1f2937;
  }

  .top-users-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #34d399;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .media-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #34d399;
    color: #0f172a;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .media-button:hover {
    background-color: #6ee7b7;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .media-icon {
    stroke-width: 2.5;
  }

  .users-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .user-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: #1e293b;
    border-radius: 8px;
    transition: transform 0.2s ease;
  }

  .user-item:hover {
    transform: translateX(5px);
    background-color: #273349;
  }

  .rank-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background-color: #10b981;
    color: #ecfdf5;
    font-weight: 700;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .user-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    border: 2px solid #34d399;
    object-fit: cover;
    flex-shrink: 0;
  }

  .user-info {
    flex: 1;
  }

  .username {
    color: #f0fdf4;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .user-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-icon {
    flex-shrink: 0;
  }

  .media-stat {
    color: #34d399;
  }

  .likes-stat {
    color: #facc15;
  }

  .comments-stat {
    color: #60a5fa;
  }

  @media (max-width: 480px) {
    .top-users-container {
      padding: 1rem;
    }

    .user-item {
      padding: 0.75rem;
    }

    .rank-badge {
      width: 1.5rem;
      height: 1.5rem;
      font-size: 0.875rem;
    }

    .user-avatar {
      width: 2.5rem;
      height: 2.5rem;
    }

    .user-stats {
      gap: 0.5rem;
    }
  }
</style>

