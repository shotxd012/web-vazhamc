<div class="top-users-container">
  <div class="top-users-header">
    <h2 class="top-users-title">üèÜ Top Users</h2>
    <a href="/media" class="media-button">
      <svg xmlns="http://www.w3.org/2000/svg" class="media-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 5 4 4-4 4"></path><path d="M19 9H5"></path><path d="M5 15h8"></path></svg>
      View Media
    </a>
  </div>
  
  <ul class="users-list">
    <% topUsers.forEach((user, index) => { %>
      <li class="user-item">
        <div class="rank-badge"><%= index + 1 %></div>
        <img src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.png" alt="<%= user.username %>'s avatar" class="user-avatar">
        <div class="user-info">
          <p class="username"><%= user.username %></p>
          <div class="user-stats">
            <span class="stat media-stat">
              <svg xmlns="http://www.w3.org/2000/svg" class="stat-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect><circle cx="9" cy="9" r="2"></circle><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path></svg>
              <%= user.mediaCount %>
            </span>
            <span class="stat likes-stat">
              <svg xmlns="http://www.w3.org/2000/svg" class="stat-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path></svg>
              <%= user.totalLikes %>
            </span>
            <span class="stat comments-stat">
              <svg xmlns="http://www.w3.org/2000/svg" class="stat-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
              <%= user.commentCount %>
            </span>
          </div>
        </div>
      </li>
    <% }) %>
  </ul>
</div>

<style>
  .top-users-container {
    background-color: #0f172a;
    border: 1px solid #1f2937;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    max-width: 600px;
    margin: 0 auto;
  }

  .top-users-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #1f2937;
  }

  .top-users-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #34d399;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .media-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #34d399;
    color: #0f172a;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .media-button:hover {
    background-color: #6ee7b7;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .media-icon {
    stroke-width: 2.5;
  }

  .users-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .user-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: #1e293b;
    border-radius: 8px;
    transition: transform 0.2s ease;
  }

  .user-item:hover {
    transform: translateX(5px);
    background-color: #273349;
  }

  .rank-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background-color: #10b981;
    color: #ecfdf5;
    font-weight: 700;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .user-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    border: 2px solid #34d399;
    object-fit: cover;
    flex-shrink: 0;
  }

  .user-info {
    flex: 1;
  }

  .username {
    color: #f0fdf4;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .user-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-icon {
    flex-shrink: 0;
  }

  .media-stat {
    color: #34d399;
  }

  .likes-stat {
    color: #facc15;
  }

  .comments-stat {
    color: #60a5fa;
  }

  @media (max-width: 480px) {
    .top-users-container {
      padding: 1rem;
    }

    .user-item {
      padding: 0.75rem;
    }

    .rank-badge {
      width: 1.5rem;
      height: 1.5rem;
      font-size: 0.875rem;
    }

    .user-avatar {
      width: 2.5rem;
      height: 2.5rem;
    }

    .user-stats {
      gap: 0.5rem;
    }
  }
</style>

