<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body class="bg-gray-900 text-white font-sans">
<%- include('partials/nav') %>

<section class="py-20">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-20 text-center text-emerald-400">
            üé´ My Tickets
        </h1>

        <!-- Create Ticket Button -->
        <div class="flex justify-center mb-6">
            <button onclick="document.getElementById('ticket-form').classList.toggle('hidden')" class="bg-emerald-600 hover:bg-emerald-700 px-4 py-2 rounded">
                ‚ûï Create Ticket
            </button>
        </div>

        <!-- Ticket Form -->
        <div id="ticket-form" class="max-w-xl mx-auto bg-gray-800 p-6 rounded-lg shadow-md border border-gray-700 hidden">
            <form action="/profile/tickets/create" method="POST" class="space-y-4">
                <input type="text" name="title" placeholder="Title" required class="w-full p-2 bg-gray-700 rounded">
                <input type="text" name="reason" placeholder="Reason" required class="w-full p-2 bg-gray-700 rounded">
                <textarea name="description" placeholder="Description..." rows="3" class="w-full bg-gray-700 p-2 rounded resize-none"></textarea>
                <select name="type" required class="w-full bg-gray-700 p-2 rounded">
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                    <option value="suggestion">Suggestion</option>
                </select>
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 w-full py-2 rounded">Submit Ticket</button>
            </form>
        </div>

 <!-- Ticket List -->
<div class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% tickets.forEach(ticket => { %>
        <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 shadow">
            <div class="flex items-center space-x-3 mb-3">
                <img src="https://cdn.discordapp.com/avatars/<%= ticket.userId %>/<%= ticket.avatar %>.png" class="w-10 h-10 rounded-full">
                <div>
                    <p class="text-sm font-semibold text-emerald-400"><%= ticket.username %></p>
                    <p class="text-xs text-gray-400"><%= new Date(ticket.createdAt).toLocaleString() %></p>
                </div>
            </div>

            <h3 class="text-lg font-bold mb-1">
                <%= ticket.title %>
                <span class="block text-xs text-gray-400">TicketId = #<%= ticket.ticketId %></span>
            </h3>

            <p class="text-sm mb-2 text-gray-300">Reason = <%= ticket.reason %></p>
            <p class="text-sm italic text-gray-400">Description = <%= ticket.description %></p>

            <div class="mt-3 text-xs text-right">
                <span class="inline-block px-3 py-1 rounded-full font-semibold
                    <%= ticket.type === 'high' ? 'bg-red-600' :
                        ticket.type === 'medium' ? 'bg-yellow-500' :
                        ticket.type === 'suggestion' ? 'bg-purple-600' : 'bg-green-600' %>">
                    <%= ticket.type.charAt(0).toUpperCase() + ticket.type.slice(1) %>
                </span>
                <span class="ml-2 text-gray-400">Status: <%= ticket.status %></span>
            </div>

            <!-- üîΩ View Details Button -->
            <div class="mt-4 text-right">
                <a href="/profile/ticket/<%= ticket.ticketId %>" class="text-blue-400 hover:underline text-sm">
                    üîç View Details
                </a>
            </div>
        </div>
    <% }) %>
</div>

</section>

<%- include('partials/footer') %>
</body>
</html>
