<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="css\style.css">
<head>
    <%- include('partials/head') %>
    <style>
        .loading-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #111827;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        .loading-content {
            text-align: center;
        }

        .loading-text {
            font-size: 2rem;
            font-weight: bold;
            margin-top: 1rem;
            background: linear-gradient(to right, #10B981, #064E3B);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        #loading-svg {
            width: 200px;
            height: 200px;
        }

        .hide-loading {
            opacity: 0;
            pointer-events: none;
        }
        
        .hero-gradient {
            background: linear-gradient(to bottom, #111827, #0F172A);
        }
        
        .game-mode-card {
            background-color: #1F2937;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .game-mode-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.2);
        }

        /* Banana plant animation styles */
        .banana-stem {
            stroke-dasharray: 300;
            stroke-dashoffset: 300;
            animation: drawStem 2s forwards;
        }

        .banana-leaf {
            opacity: 0;
            transform-origin: bottom center;
            animation: growLeaf 0.5s forwards;
        }

        .banana-leaf-1 {
            animation-delay: 0.5s;
        }

        .banana-leaf-2 {
            animation-delay: 0.8s;
        }

        .banana-leaf-3 {
            animation-delay: 1.1s;
        }

        .banana-leaf-4 {
            animation-delay: 1.4s;
        }

        .banana-fruit {
            opacity: 0;
            animation: showFruit 0.3s forwards;
            animation-delay: 1.7s;
        }

        .loading-progress {
            stroke-dasharray: 283;
            stroke-dashoffset: 283;
            animation: loadingProgress 2s infinite;
        }

        @keyframes drawStem {
            to {
                stroke-dashoffset: 0;
            }
        }

        @keyframes growLeaf {
            from {
                opacity: 0;
                transform: scale(0) rotate(-10deg);
            }
            to {
                opacity: 1;
                transform: scale(1) rotate(0);
            }
        }

        @keyframes showFruit {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes loadingProgress {
            0% {
                stroke-dashoffset: 283;
            }
            50% {
                stroke-dashoffset: 0;
            }
            100% {
                stroke-dashoffset: 283;
            }
        }
    </style>
    <%- include('partials/message') %>
</head>

<body class="bg-gray-900 text-white min-h-screen font-sans">
    <div id="loading" class="loading-container">
        <div class="loading-content">
            <svg id="loading-svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <linearGradient id="leafGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                        <stop offset="0%" style="stop-color:#10B981;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#064E3B;stop-opacity:1" />
                    </linearGradient>
                    <linearGradient id="fruitGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                        <stop offset="0%" style="stop-color:#FBBF24;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#D97706;stop-opacity:1" />
                    </linearGradient>
                    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
                        <feGaussianBlur stdDeviation="2" result="blur" />
                        <feComposite in="SourceGraphic" in2="blur" operator="over" />
                    </filter>
                </defs>
                
                <!-- Loading circle -->
                <circle cx="100" cy="100" r="90" fill="none" stroke="#1F2937" stroke-width="4" />
                <circle cx="100" cy="100" r="90" fill="none" stroke="url(#leafGradient)" stroke-width="4" class="loading-progress" />
                
                <!-- Banana plant stem -->
                <path class="banana-stem" d="M100,160 C100,140 100,120 100,80" fill="none" stroke="#2F855A" stroke-width="6" stroke-linecap="round" />
                
                <!-- Banana leaves -->
                <path class="banana-leaf banana-leaf-1" d="M100,100 C120,80 150,90 160,70" fill="none" stroke="url(#leafGradient)" stroke-width="5" stroke-linecap="round" filter="url(#glow)" />
                <path class="banana-leaf banana-leaf-2" d="M100,90 C80,70 50,80 40,60" fill="none" stroke="url(#leafGradient)" stroke-width="5" stroke-linecap="round" filter="url(#glow)" />
                <path class="banana-leaf banana-leaf-3" d="M100,110 C130,110 150,130 170,120" fill="none" stroke="url(#leafGradient)" stroke-width="5" stroke-linecap="round" filter="url(#glow)" />
                <path class="banana-leaf banana-leaf-4" d="M100,120 C70,120 50,140 30,130" fill="none" stroke="url(#leafGradient)" stroke-width="5" stroke-linecap="round" filter="url(#glow)" />
                
                <!-- Banana bunch -->
                <g class="banana-fruit">
                    <path d="M95,80 C90,70 90,65 95,60 C100,55 110,55 115,60 C120,65 120,70 115,80 Z" fill="url(#fruitGradient)" filter="url(#glow)" />
                    <path d="M105,85 C100,75 100,70 105,65 C110,60 120,60 125,65 C130,70 130,75 125,85 Z" fill="url(#fruitGradient)" filter="url(#glow)" />
                    <path d="M90,90 C85,80 85,75 90,70 C95,65 105,65 110,70 C115,75 115,80 110,90 Z" fill="url(#fruitGradient)" filter="url(#glow)" />
                </g>
            </svg>
            <div class="loading-text">VAZHA MC</div>
        </div>
    </div>

    <div id="content" style="display: none;">
        <%- include('partials/nav') %>
        

        <section id="home" class="hero-gradient min-h-screen flex items-center justify-center pt-16">
            <div class="container mx-auto px-4 py-32 text-center">
                <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-green-700">
                    Welcome to Vazha MC
                </h1>
                <p class="text-xl md:text-2xl mb-8 text-gray-300">
                    Experience enhanced Minecraft gameplay with our curated mod packs
                </p>
                <div class="flex justify-center space-x-4">
                    <button id="play-now" class="bg-emerald-600 hover:bg-emerald-700 px-8 py-3 rounded-lg text-lg font-medium transition-colors transform hover:scale-105">
                        Play Now
                    </button>
                    <a href="https://discord.gg/zZtMR4PWwE" target="_blank" class="bg-gray-800 hover:bg-gray-700 px-8 py-3 rounded-lg text-lg font-medium transition-colors transform hover:scale-105">
                        Join Discord
                    </a>
                </div>
            </div>
        </section>
        
        <section class="py-20 bg-gray-800">
            <div class="container mx-auto px-4 text-center">
                <h2 class="text-4xl font-bold mb-12">Server Status</h2>
                <div class="inline-flex items-center space-x-2 bg-gray-900 px-6 py-3 rounded-lg">
                    <span class="w-3 h-3 bg-emerald-500 rounded-full"></span>
                    <span class="text-lg">Online - Join now play.vazha.fun</span>
                </div>
            </div>
        </section>
            
        <%- include('partials/footer') %>
    </div>

    <script>
        window.addEventListener('load', function() {
            setTimeout(function() {
                const loadingElement = document.getElementById('loading');
                const contentElement = document.getElementById('content');
                loadingElement.classList.add('hide-loading');
                contentElement.style.display = 'block';
                setTimeout(function() {
                    loadingElement.style.display = 'none';
                }, 500);
            }, 2500); // Increased loading time slightly to show the full animation
        });

        document.getElementById('play-now').addEventListener('click', function() {
            const serverIP = 'play.vazha.fun';

            navigator.clipboard.writeText(serverIP).then(() => {
                alert('Server IP copied to clipboard: ' + serverIP);
            }).catch(err => {
                console.error('Failed to copy server IP: ', err);
                alert('Failed to copy server IP. Please try again.');
            });
        });
    </script>
</body>
</html>
