    <style>
        .loading-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #111827;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        .loading-content {
            text-align: center;
        }

        .loading-text {
            font-size: 2rem;
            font-weight: bold;
            margin-top: 1rem;
            background: linear-gradient(to right, #10B981, #064E3B);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        #loading-svg {
            width: 200px;
            height: 200px;
        }

        .hide-loading {
            opacity: 0;
            pointer-events: none;
        }
        
        .hero-gradient {
            background: linear-gradient(to bottom, #111827, #0F172A);
        }
        
        .game-mode-card {
            background-color: #1F2937;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .game-mode-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.2);
        }

        /* Banana tree animation styles */
        .tree-trunk {
            transform-origin: bottom center;
            animation: growTrunk 1.5s ease-out forwards;
        }

        .tree-ground {
            stroke-dasharray: 200;
            stroke-dashoffset: 200;
            animation: drawLine 1s ease-out forwards;
            animation-delay: 1.5s;
        }

        .tree-leaf {
            opacity: 0;
            transform-origin: bottom center;
            animation: growLeaf 0.8s ease-out forwards, swayLeaf 3s ease-in-out infinite;
        }

        .leaf-1 {
            animation-delay: 0.3s, 1.8s;
        }

        .leaf-2 {
            animation-delay: 0.5s, 2s;
        }

        .leaf-3 {
            animation-delay: 0.7s, 2.2s;
        }

        .leaf-4 {
            animation-delay: 0.9s, 2.4s;
        }

        .leaf-5 {
            animation-delay: 1.1s, 2.6s;
        }

        .leaf-6 {
            animation-delay: 1.3s, 2.8s;
        }

        .tree-character {
            opacity: 0;
            animation: showCharacter 0.5s ease-out forwards;
            animation-delay: 2s;
        }

        .loading-circle {
            stroke-dasharray: 502;
            stroke-dashoffset: 502;
            animation: drawCircle 2s linear infinite;
        }

        /* Countdown timer styles */
        .countdown-container {
            margin-top: 1.5rem;
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .countdown-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: rgba(31, 41, 55, 0.8);
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            min-width: 4rem;
        }

        .countdown-value {
            font-size: 1.5rem;
            font-weight: bold;
            color: #10B981;
        }

        .countdown-label {
            font-size: 0.75rem;
            color: #D1D5DB;
            text-transform: uppercase;
        }

        .launch-message {
            margin-top: 1rem;
            font-size: 1.25rem;
            color: #10B981;
            font-weight: bold;
        }

        @keyframes growTrunk {
            from {
                transform: scaleY(0);
            }
            to {
                transform: scaleY(1);
            }
        }

        @keyframes drawLine {
            to {
                stroke-dashoffset: 0;
            }
        }

        @keyframes growLeaf {
            from {
                opacity: 0;
                transform: scale(0);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes swayLeaf {
            0% {
                transform: rotate(0deg);
            }
            25% {
                transform: rotate(3deg);
            }
            75% {
                transform: rotate(-3deg);
            }
            100% {
                transform: rotate(0deg);
            }
        }

        @keyframes showCharacter {
            from {
                opacity: 0;
                transform: translateX(-10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes drawCircle {
            0% {
                stroke-dashoffset: 502;
            }
            50% {
                stroke-dashoffset: 0;
            }
            100% {
                stroke-dashoffset: -502;
            }
        }
    </style>
