<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="css\style.css">
<head>
    <%- include('partials/head') %>
    <style>
        .loading-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #111827;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        .loading-content {
            text-align: center;
        }

        .loading-text {
            font-size: 2rem;
            font-weight: bold;
            margin-top: 1rem;
            background: linear-gradient(to right, #10B981, #064E3B);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        #loading-svg {
            width: 200px;
            height: 200px;
        }

        .hide-loading {
            opacity: 0;
            pointer-events: none;
        }
        
        .hero-gradient {
            background: linear-gradient(to bottom, #111827, #0F172A);
        }
        
        .game-mode-card {
            background-color: #1F2937;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .game-mode-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.2);
        }

        /* Banana tree animation styles */
        .tree-trunk {
            transform-origin: bottom center;
            animation: growTrunk 1.5s ease-out forwards;
        }

        .tree-ground {
            stroke-dasharray: 200;
            stroke-dashoffset: 200;
            animation: drawLine 1s ease-out forwards;
            animation-delay: 1.5s;
        }

        .tree-leaf {
            opacity: 0;
            transform-origin: bottom center;
            animation: growLeaf 0.8s ease-out forwards, swayLeaf 3s ease-in-out infinite;
        }

        .leaf-1 {
            animation-delay: 0.3s, 1.8s;
        }

        .leaf-2 {
            animation-delay: 0.5s, 2s;
        }

        .leaf-3 {
            animation-delay: 0.7s, 2.2s;
        }

        .leaf-4 {
            animation-delay: 0.9s, 2.4s;
        }

        .leaf-5 {
            animation-delay: 1.1s, 2.6s;
        }

        .leaf-6 {
            animation-delay: 1.3s, 2.8s;
        }

        .tree-character {
            opacity: 0;
            animation: showCharacter 0.5s ease-out forwards;
            animation-delay: 2s;
        }

        .loading-circle {
            stroke-dasharray: 502;
            stroke-dashoffset: 502;
            animation: drawCircle 2s linear infinite;
        }

        @keyframes growTrunk {
            from {
                transform: scaleY(0);
            }
            to {
                transform: scaleY(1);
            }
        }

        @keyframes drawLine {
            to {
                stroke-dashoffset: 0;
            }
        }

        @keyframes growLeaf {
            from {
                opacity: 0;
                transform: scale(0);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes swayLeaf {
            0% {
                transform: rotate(0deg);
            }
            25% {
                transform: rotate(3deg);
            }
            75% {
                transform: rotate(-3deg);
            }
            100% {
                transform: rotate(0deg);
            }
        }

        @keyframes showCharacter {
            from {
                opacity: 0;
                transform: translateX(-10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes drawCircle {
            0% {
                stroke-dashoffset: 502;
            }
            50% {
                stroke-dashoffset: 0;
            }
            100% {
                stroke-dashoffset: -502;
            }
        }
    </style>
    <%- include('partials/message') %>
</head>

<body class="bg-gray-900 text-white min-h-screen font-sans">
    <div id="loading" class="loading-container">
        <div class="loading-content">
            <svg id="loading-svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <linearGradient id="treeGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                        <stop offset="0%" style="stop-color:#10B981;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#064E3B;stop-opacity:1" />
                    </linearGradient>
                    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
                        <feGaussianBlur stdDeviation="1.5" result="blur" />
                        <feComposite in="SourceGraphic" in2="blur" operator="over" />
                    </filter>
                </defs>
                
                <!-- Loading circle -->
                <circle cx="100" cy="100" r="80" fill="none" stroke="#1F2937" stroke-width="3" />
                <circle cx="100" cy="100" r="80" fill="none" stroke="url(#treeGradient)" stroke-width="3" class="loading-circle" />
                
                <!-- Tree trunk -->
                <rect class="tree-trunk" x="95" y="110" width="10" height="50" fill="#2D3748" />
                
                <!-- Ground line -->
                <line class="tree-ground" x1="50" y1="160" x2="150" y2="160" stroke="#2D3748" stroke-width="3" stroke-linecap="round" />
                
                <!-- Tree leaves -->
                <path class="tree-leaf leaf-1" d="M100,110 C110,90 130,85 140,90 C130,95 120,105 100,110" fill="#10B981" filter="url(#glow)" />
                <path class="tree-leaf leaf-2" d="M100,110 C90,90 70,85 60,90 C70,95 80,105 100,110" fill="#10B981" filter="url(#glow)" />
                <path class="tree-leaf leaf-3" d="M100,100 C110,80 135,70 145,80 C135,85 120,95 100,100" fill="#10B981" filter="url(#glow)" />
                <path class="tree-leaf leaf-4" d="M100,100 C90,80 65,70 55,80 C65,85 80,95 100,100" fill="#10B981" filter="url(#glow)" />
                <path class="tree-leaf leaf-5" d="M100,90 C105,70 120,60 130,65 C120,75 110,85 100,90" fill="#10B981" filter="url(#glow)" />
                <path class="tree-leaf leaf-6" d="M100,90 C95,70 80,60 70,65 C80,75 90,85 100,90" fill="#10B981" filter="url(#glow)" />
                
                <!-- Small character -->
                <path class="tree-character" d="M130,160 C130,155 132,150 135,150 C138,150 140,155 140,160" fill="#10B981" />
            </svg>
            <div class="loading-text">VAZHA MC</div>
        </div>
    </div>

    <div id="content" style="display: none;">
        <%- include('partials/nav') %>
        

        <section id="home" class="hero-gradient min-h-screen flex items-center justify-center pt-16">
            <div class="container mx-auto px-4 py-32 text-center">
                <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-green-700">
                    Welcome to Vazha MC
                </h1>
                <p class="text-xl md:text-2xl mb-8 text-gray-300">
                    Experience enhanced Minecraft gameplay with our curated mod packs
                </p>
                <div class="flex justify-center space-x-4">
                    <button id="play-now" class="bg-emerald-600 hover:bg-emerald-700 px-8 py-3 rounded-lg text-lg font-medium transition-colors transform hover:scale-105">
                        Play Now
                    </button>
                    <a href="https://discord.gg/zZtMR4PWwE" target="_blank" class="bg-gray-800 hover:bg-gray-700 px-8 py-3 rounded-lg text-lg font-medium transition-colors transform hover:scale-105">
                        Join Discord
                    </a>
                </div>
            </div>
        </section>
        
        <section class="py-20 bg-gray-800">
            <div class="container mx-auto px-4 text-center">
                <h2 class="text-4xl font-bold mb-12">Server Status</h2>
                <div class="inline-flex items-center space-x-2 bg-gray-900 px-6 py-3 rounded-lg">
                    <span class="w-3 h-3 bg-emerald-500 rounded-full"></span>
                    <span class="text-lg">Online - Join now play.vazha.fun</span>
                </div>
            </div>
        </section>
            
        <%- include('partials/footer') %>
    </div>

    <script>
        window.addEventListener('load', function() {
            setTimeout(function() {
                const loadingElement = document.getElementById('loading');
                const contentElement = document.getElementById('content');
                loadingElement.classList.add('hide-loading');
                contentElement.style.display = 'block';
                setTimeout(function() {
                    loadingElement.style.display = 'none';
                }, 500);
            }, 3000); // Increased loading time to show the full animation
        });

        document.getElementById('play-now').addEventListener('click', function() {
            const serverIP = 'play.vazha.fun';

            navigator.clipboard.writeText(serverIP).then(() => {
                alert('Server IP copied to clipboard: ' + serverIP);
            }).catch(err => {
                console.error('Failed to copy server IP: ', err);
                alert('Failed to copy server IP. Please try again.');
            });
        });
    </script>
</body>
</html>
